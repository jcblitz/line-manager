<h1>Welcome to Line Management</h1>
<h2>A tool for routing customers to their correct lines</h2>

<p>Please enter the information below and we will route you to the appropriate line</p>

<%= form_for @person, url: line_manager_path, html: {:class => "form-horizontal"} do |f| %>
 <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :shoes, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :shoes %>
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :hat, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :hat %>
        </label>
      </div>
    </div>
  </div>
  
  <%= f.submit(class: 'btn btn-primary') %>
<% end %>
